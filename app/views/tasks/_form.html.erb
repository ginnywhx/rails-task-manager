<%= form_for(task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_field :details %>

   <%= f.label :completed %>
  <%= f.text_field :completed %>

  <% if task.new_record? %>
    <%= f.submit 'Add', class: "btn-blue" %>
  <% else %>
    <%= f.submit 'Edit', class: 'btn-red' %>
  <% end %>
<% end %>
